<?xml version="1.0" encoding="UTF-8"?>
<configuration>    
    <property name="LOGS" value="./log"/>

    <!-- 读取appName-->
    <springProperty scope="context" name="appName" source="spring.application.name"/>
    <!-- ES日志服务器cluster-name  -->
    <springProperty scope="context" name="clusterName" source="logging.es.cluster-name"/>
    <!-- ES日志服务器URL地址  -->
    <springProperty scope="context" name="clusterNodes" source="logging.es.cluster-nodes"/>
    <!-- ES日志服务器URL地址  -->
    <springProperty scope="context" name="xpackUser" source="logging.es.xpack.security.user"/>


    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%black(%d{ISO8601}) %highlight(%-5level) [%blue(%t)] %yellow(%logger) : %msg%n%throwable</Pattern>
        </layout>
    </appender>


    <appender name="RollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS}/javashop.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>%black(%d{ISO8601}) %highlight(%-5level) [%blue(%t)] %yellow(%logger) : %msg%n%throwable</Pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily and when the file reaches 10 MegaBytes -->
            <fileNamePattern>${LOGS}/archived/spring-boot-logger-%d{yyyy-MM-dd}.%i.log
            </fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>

    <!--  发送异步日志到ES  -->
    <appender name="ELASTIC" class="com.enation.app.javashop.framework.logs.appender.ElasticAppender">
        <clusterName>${clusterName}</clusterName>
        <clusterNodes>${clusterNodes}</clusterNodes>
        <appName>${appName}</appName>
        <xpackUser>${xpackUser}</xpackUser>
    </appender>

    <!-- log info start -->
    <appender name="scheduled-info" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS}/${appName}-scheduled.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>%black(%d{ISO8601}) %highlight(%-5level) [%blue(%t)] %yellow(%logger) : %msg%n%throwable</Pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily and when the file reaches 10 MegaBytes -->
            <fileNamePattern>${LOGS}/scheduled/${appName}-scheduled-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>
    <logger name="com.enation.app.javashop.framework.context.instance.InstanceContextImpl" level="debug" additivity="false">
        <appender-ref ref="scheduled-info" />
    </logger>
    <!-- LOG everything at INFO level -->
    <root level="info">
        <appender-ref ref="RollingFile"/>
        <appender-ref ref="Console"/>
        <appender-ref ref="ELASTIC" />
    </root>

</configuration>